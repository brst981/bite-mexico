<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_l_black"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/address_bar"
            android:layout_width="match_parent"
            android:layout_height="225dp" >

            <ImageView
                android:id="@+id/image_hotel_2"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:contentDescription="Image back"
                android:scaleType="fitXY"
                android:src="@drawable/image_test2" />

            <RelativeLayout
                android:id="@+id/layout_text_r_discount"
                android:layout_width="125dp"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/image_hotel_2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/image_hotel_2"
                android:background="@drawable/btn_bg" >

                <TextView
                    android:id="@+id/text_r_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/_l_white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_text_people"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/layout_text_r_discount"
                android:layout_alignTop="@+id/layout_text_r_discount"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/layout_text_r_discount"
                android:background="@drawable/btn_bg" >

                <ImageView
                    android:id="@+id/not_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:src="@drawable/user_2" />

                <TextView
                    android:id="@+id/text_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/not_available"
                    android:gravity="center|left"
                    android:paddingBottom="3dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="1dp"
                    android:paddingTop="3dp"
                    android:text="x123"
                    android:textColor="@color/_l_white"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_text_Month"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/layout_text_r_discount"
                android:layout_alignTop="@+id/layout_text_r_discount"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/layout_text_people"
                android:background="@drawable/btn_bg"
                android:gravity="center" >

                <!--
                 <TextView
                android:id="@+id/not_available2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:background="@drawable/cross"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/_l_white"
                android:textSize="14sp"
                android:visibility="gone" />
                -->

                <TextView
                    android:id="@+id/text_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/not_available2"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="3dp"
                    android:text="JAN"
                    android:textColor="@color/_l_white"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_text_call"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/layout_text_r_discount"
                android:layout_below="@+id/layout_text_r_discount"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/image_hotel_2"
                android:background="@drawable/btn_bg" >

                <TextView
                    android:id="@+id/not_available1"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/phone"
                    android:gravity="center"
                    android:textColor="@color/_l_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/not_available1"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="3dp"
                    android:text="Call"
                    android:textColor="@color/_l_white"
                    android:textSize="13sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_week_1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/layout_text_r_discount"
                android:layout_below="@+id/layout_text_call"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/image_hotel_2"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:visibility="gone" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_week_2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/layout_text_r_discount"
                android:layout_below="@+id/layout_week_1"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/image_hotel_2"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:visibility="gone" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_week_3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/layout_text_r_discount"
                android:layout_below="@+id/layout_week_2"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:visibility="gone" >
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/horizontal_4"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/layout_text_r_discount"
                android:layout_below="@+id/layout_week_3"
                android:layout_marginTop="3dp"
                android:paddingRight="5dp"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/layout_week_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible" >
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/horizontal_5"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/layout_text_r_discount"
                android:layout_below="@+id/horizontal_4"
                android:layout_marginTop="3dp"
                android:paddingRight="5dp"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/layout_week_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible" >
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/horizontal_6"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/layout_text_r_discount"
                android:layout_below="@+id/horizontal_5"
                android:layout_marginTop="3dp"
                android:paddingRight="5dp"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/layout_week_6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible" >
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/rating_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layout_text_r_discount"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/image_hotel_2"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="4.0"
                android:textColor="@color/_l_white"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/rating_num"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4"
                android:stepSize="1" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_hotel_2"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:gravity="center_vertical"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/image_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Image back"
                    android:scaleType="fitXY"
                    android:src="@drawable/phone_call" />

                <TextView
                    android:id="@+id/text_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:text="604.605.4340"
                    android:textColor="@color/_l_white"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="1dp"
                android:layout_weight="65"
                android:gravity="center_vertical|left" >

                <ImageView
                    android:id="@+id/image_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Image back"
                    android:scaleType="fitXY"
                    android:src="@drawable/web" />

                <TextView
                    android:id="@+id/text_web_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="http://www.belmontbar.com"
                    android:textColor="@color/_l_white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_group_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_d_green"
                android:gravity="center_vertical|left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="GROUP"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text_child_info_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_l_white"
                android:gravity="center_vertical|left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Child"
                android:textColor="@color/_l_black" />

            <TextView
                android:id="@+id/text_group_cuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_d_green"
                android:gravity="center_vertical|left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="GROUP"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text_child_cuisine_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_l_white"
                android:gravity="center_vertical|left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Child"
                android:textColor="@color/_l_black" />

            <TextView
                android:id="@+id/text_group_offerType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_d_green"
                android:gravity="center_vertical|left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="GROUP"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text_child_offerType_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_l_white"
                android:gravity="center_vertical|left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Child"
                android:textColor="@color/_l_black" />

            <TextView
                android:id="@+id/text_group_no_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_d_green"
                android:gravity="center_vertical|left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="GROUP"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text_child_no_people_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_l_white"
                android:gravity="center_vertical|left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Child"
                android:textColor="@color/_l_black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
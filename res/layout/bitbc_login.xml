<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#545454"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/header_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_d_green"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/btn_back_login"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/icon_back" />

                <TextView
                    android:id="@+id/header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Registro"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" >

                    <ImageView
                        android:id="@+id/proflie_image_register"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_gravity="left|center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/border"
                        android:padding="2dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/demo_proflie_image_register"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_gravity="left|center_horizontal"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/user"
                        android:scaleType="fitXY" />

                    <!--
            <com.theartofdev.edmodo.cropper.CropImageView
                android:id="@+id/CropImageView"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="left|center_horizontal"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter" >
            </com.theartofdev.edmodo.cropper.CropImageView>
                    -->

                    <TextView
                        android:id="@+id/text_show_hide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_vertical"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="35dp"
                        android:text="Subir"
                        android:textColor="@color/_l_white"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/Firstname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="115dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editbox_step2_corner_selector"
                        android:ems="10"
                        android:hint="Nombre"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textColor="@color/_l_black"
                        android:textSize="15sp" 
                        >

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/Lastname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="115dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="55dp"
                        android:background="@drawable/editbox_step2_corner_selector"
                        android:hint="Apellido"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/_l_black"
                        
                        android:textSize="15sp" >
                    </EditText>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Por favor usa una imagen clara donde muestres tu cara"
                    android:textColor="@color/_l_white"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editbox_step2_corner_selector"
                    android:hint="Correo"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@color/_l_black"
                    
                    android:textSize="15sp" >
                </EditText>

                <EditText
                    android:id="@+id/Confirm_Email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editbox_step2_corner_selector"
                    android:hint="Confirmar correo"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@color/_l_black"                    
                    android:textSize="15sp" >
                </EditText>

                <EditText
                    android:id="@+id/Mobile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editbox_step2_corner_selector"
                    android:hint="Teléfono"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="@color/_l_black"                    
                    android:textSize="15sp" >
                </EditText>

                <EditText
                    android:id="@+id/Password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editbox_step2_corner_selector"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:password="true"                    
                    android:textColor="@color/_l_black"
                    android:textSize="15sp" >
                </EditText>

                <EditText
                    android:id="@+id/ConfirmPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editbox_step2_corner_selector"
                    android:hint="Confirmar contraseña"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:password="true"
                    android:textColor="@color/_l_black"                    
                    android:textSize="15sp" >
                </EditText>

                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editbox_step2_corner_selector"
                    android:textColor="@color/_l_black" >
                </Spinner>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/_d_green"
                    android:text="Registro"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
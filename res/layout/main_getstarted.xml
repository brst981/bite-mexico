<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bite_background_image"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.brst.android.bite.app.MainActivity$PlaceholderFragment" >

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/img_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_logo"
        android:layout_marginTop="10dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text_bite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="15dp"
                android:text="@string/text_bite_mexico"
                android:textColor="@android:color/white"
                android:verticalScrollbarPosition="right" />

            <Button
                android:id="@+id/button_getstarted"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_bite"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:background="#545454"
                android:text="Empezar"
                android:textColor="#ffffff" />

            <!-- <Button -->
            <!-- android:id="@+id/button_fast" -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_below="@+id/button_getstarted" -->
            <!-- android:layout_marginTop="2dp" -->
            <!-- android:background="@color/transparent" -->
            <!-- android:text="Fast Forward it!" -->
            <!-- android:textColor="#ffffff" /> -->

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>